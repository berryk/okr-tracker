# AWS Deployment Environment Variables
# Copy this to .env and fill in the values

# ===========================================
# Required Settings
# ===========================================

# JWT secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-here

# Your domain (for CORS)
CORS_ORIGIN=https://okr.yourdomain.com
VITE_API_URL=https://okr.yourdomain.com

# ===========================================
# AWS Bedrock Configuration
# ===========================================

# AWS Region where Bedrock is available
AWS_REGION=us-east-1

# Bedrock model ID (Claude models available on Bedrock)
# Options:
#   anthropic.claude-3-5-sonnet-20241022-v2:0 (recommended - best quality)
#   anthropic.claude-3-haiku-20240307-v1:0 (faster, cheaper)
#   anthropic.claude-3-opus-20240229-v1:0 (most capable, expensive)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# AWS Credentials (optional if using EC2 instance role)
# Leave empty to use instance role (recommended for EC2)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# Database (optional - defaults work for Docker)
# ===========================================

# Database password (default: okr_password)
DB_PASSWORD=okr_password
